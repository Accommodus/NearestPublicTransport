{
    "name": "Project3 Dev Container",
    "image":"boomboomcannon/near-pub-trans",

    "workspaceMount": "type=tmpfs,target=/home/workspace",
    "workspaceFolder": "/home/workspace/NearestPublicTransport",

    "postCreateCommand": "git clone --branch main https://github.com/Accommodus/NearestPublicTransport.git /home/workspace",

    "customizations": {
        "vscode": {
            "extensions": [
                "nimlang.nimlang"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    }
}
